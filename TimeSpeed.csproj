<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Version>3.2.1</Version>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
    <PackageReference Include="Pathoschild.Stardew.ModTranslationClassBuilder" Version="2.2.1" />
  </ItemGroup>

  <!-- Exclude _Common files from default compilation (they're included via projitems) -->
  <ItemGroup>
    <Compile Remove="_Common\**" />
  </ItemGroup>

  <Import Project="_Common\_Common.projitems" Label="Shared" />
</Project>
